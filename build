#!/usr/bin/env ruby
# frozen_string_literal: true

c_waypoints = [
  0,
  37,
  100,
  40
].map(&:to_f)

f_waypoints = [
  98.6,
  65,
  100
].map(&:to_f)

records = []

c_waypoints.each do |c|
  records << { c:, f: (c * (9 / 5)) + 32 }
end

f_waypoints.each do |f|
  records << { f:, c: (f - 32) * (5 / 9) }
end

records.sort! do |a, b|
  a[:f] <=> b[:f]
end

File.open('index.html', 'w') do |f|
  f.write "<!doctype html>
  <html lang=en-US>
    <head>
      <meta charset=UTF-8>
      <meta name=viewport content=\"width=device-width, initial-scale=1\">
      <title>Temperature</title>
      <link rel=stylesheet href=styles.css>
    </head>
    <body>
    <main>"
  f.write '<table>'
  f.write '<thead><tr><th>Celsius</th><th>Fahrenheit</th></tr>'
  f.write '</thead>'
  f.write '<tbody>'
  records.each do |record|
    f.write "<tr><td>#{record[:c]}</td><td>#{record[:f]}</td></tr>"
  end
  f.write '</tbody>'
  f.write '</table>'
  f.write '</main></body></html>'
end

`tidy --indent-spaces 2 --tidy-mark no -indent -wrap 0 -modify -quiet index.html`
